<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TitleTextAppearance</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextBody</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextBody</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GiancaTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!-- Button styles -->
    <style name="BlacklistAppButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/dimenLabelL</item>
        <item name="android:elevation">6dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <!--        <item name="android:background">@drawable/selector_button</item>-->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>"
    </style>

    <style name="BlacklistAppButton.Gray">
        <item name="android:background">@drawable/button_gray_selector</item>
    </style>

    <style name="BlacklistAppButton.Blue">
        <item name="android:background">@drawable/background_button_blue</item>
    </style>

    <style name="BlacklistAppButton.Red">
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="BlacklistAppButton.Primary">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="BlacklistAppButton.Accent">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="BlacklistAppButton.Secondary">
        <item name="backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextBody</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">@color/colorTextBody</item>
        <item name="android:background">@drawable/shape_background_style_edittext</item>
    </style>

    <style name="EditTextTheme.Black">
        <item name="android:background">@drawable/shape_rectangle_corner_gray2</item>
    </style>

    <style name="BlacklistAppTheme.TextInputLayout" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColorHint">@color/colorGrayBright1</item>
    </style>

    <style name="BlacklistAppTextInput">
        <!--        <item name="android:fontFamily">@font/roboto_regular</item>-->
        <item name="android:textSize">@dimen/dimenParagraphL</item>
        <item name="android:textColor">@color/colorGrayDark1</item>
    </style>


    <style name="Custom_Dialog" parent="Theme.AppCompat.Light.Dialog.Alert" >
    <item name="windowMinWidthMajor">80%</item>
    <item name="windowMinWidthMinor">65%</item>
</style>
    <style name="AppTheme.AppCompat.Dialog.Alert.NoFloating" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>
